        <TextView
            android:id="@+id/text_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_total_order"
            android:layout_alignStart="@+id/text_delivery_unit"
            android:layout_alignEnd="@+id/text_delivery_unit"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:text="科室名称"
            android:textColor="@color/app_text_99"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/te_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_total_order"
            android:layout_marginStart="@dimen/distance_dp_20"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:layout_toEndOf="@+id/text_department"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15"
            tools:text="1" />

        <TextView
            android:id="@+id/text_delivery_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_department"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:text="供货单位"
            android:textColor="@color/app_text_99"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/te_delivery_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_department"
            android:layout_marginStart="@dimen/distance_dp_20"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:layout_toEndOf="@+id/text_delivery_unit"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15"
            tools:text="1" />

        <TextView
            android:id="@+id/text_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_delivery_unit"
            android:layout_alignStart="@+id/text_delivery_unit"
            android:layout_alignEnd="@+id/text_delivery_unit"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:text="采购人员"
            android:textColor="@color/app_text_99"
            android:textSize="@dimen/distance_dp_15" />

        <TextView
            android:id="@+id/te_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_delivery_unit"
            android:layout_marginStart="@dimen/distance_dp_20"
            android:layout_marginTop="@dimen/distance_dp_5"
            android:layout_toEndOf="@+id/text_buyer"
            android:textColor="@color/app_text_33"
            android:textSize="@dimen/distance_dp_15"
            tools:text="1" />

        <TextView
            android:id="@+id/te_delete"
            style="@style/CurrentText"
            android:layout_width="@dimen/distance_dp_60"
            android:layout_height="@dimen/distance_dp_25"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/distance_dp_10"
            android:text="删除"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/te_check"
            style="@style/CurrentText"
            android:layout_width="@dimen/distance_dp_60"
            android:layout_height="@dimen/distance_dp_25"
            android:layout_toStartOf="@+id/te_delete"
            android:text="审核"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/te_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/te_buyer"
            android:layout_marginTop="@dimen/distance_dp_10"
            android:text="材料列表"
            android:textColor="@color/color_black"
            android:textSize="@dimen/distance_dp_18" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_stuff_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/te_search_result"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </RelativeLayout>
</FrameLayout>